{
    "openapi": "3.0.0",
    "info": {
        "title": "API",
        "description": "description",
        "contact": {
            "email": "jadirjsjunior@gmail.com"
        },
        "version": "0.0.0"
    },
    "servers": [
        { "url": "http://localhost:3000/", "description": "development API" },
        { "url": "http://localhost:3000/qa", "description": "QA API" }
    ],
    "paths": {
        "/login": {
            "post": {
                "summary": "Login do usuário",
                "description": "Essa rota é para authenticação do usuário",
                "tags": ["Authentication"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Auth"
                            },
                            "examples": {
                                "auth": {
                                    "value": {
                                        "email": "johndoe@email.com",
                                        "password": "12345acbd"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "400": {
                        "description": "Erro se o usuário não enviar o body do JSON correto (password ou email)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Errors"
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "post": {
                "summary": "Cadastro de usuário",
                "description": "Essa rota é responsável por cadastrar um novo usuário",
                "tags": ["Users"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "johndoe@email.com",
                                        "password": "12345acbd"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Errors": {
                "type": "object",
                "properties": {
                    "errors": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "msg": {
                        "type": "string"
                    },
                    "param": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    }
                }
            },
            "Auth": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "passowrd": {
                        "type": "string"
                    }
                }
            },
            "Token": {
                "type": "object",
                "properties": {
                    "accessToken": {
                        "type": "string"
                    },
                    "refreshToken": {
                        "type": "string"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "passowrd": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "permissionFlags": {
                        "type": "number"
                    },
                    "_id": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
